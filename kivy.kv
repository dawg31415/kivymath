<Header_SectionSelector>:
    size_hint_y: None
    height: 50


    Button:
        text: "Btn1"


    Button:
        text: "Btn2"


    Button:
        text: "Btn3"


    Button:
        text: "Exit"
        on_press: app.leave()



<Body_Math>:
    orientation: "vertical"

    
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: 100

        TextInput:
            id: "math_input"
            placeholder: "Enter"

        Button:
            text: "Count"
            background_color: (0.5, 0.5, 0.5, 1)
            backgroun_normal: ""
            on_press: app.do_math()


    Label:
        id: "math_output"
        text: "Output"
        # color: (0.5, 0.5, 0.5, 1)



<Footer_Credentials>:
    anchor_x: "right"
    size_hint_y: None
    height: 20
    padding: 10, 0


    # Needed for laying list of labels
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None # Do not fill whole Footer -> else alignment won't work
        height: root.height
        width: self.minimum_width


        Label:
            text: "pie.$ credentials"
            color: (0.41, 0.42, 0.74, 1)

            text_size: None, None   # Turn off text width matching Label's width, Look down
            size_hint: None, None   # Turn off Label's width match Layout's width, Look down 
            size: self.texture_size  # Match Label's width with text's widthe
            padding: 5, 0


        Label:
            text: "@pie.2025"
            color: (0.20, 0.15, 0.74, 1)
            markup: True

            text_size: None, None   # Turn off text width matching Label's width, Look down
            size_hint: None, None   # Turn off Label's width match Layout's width, Look down 
            size: self.texture_size  # Match Label's width with text's widthe
